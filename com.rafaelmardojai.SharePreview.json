{
    "app-id": "com.rafaelmardojai.SharePreview",
    "runtime": "org.gnome.Platform",
    "runtime-version": "40",
    "sdk": "org.gnome.Sdk",
    "sdk-extensions": ["org.freedesktop.Sdk.Extension.rust-stable"],
    "command": "share-preview",
    "finish-args" : [
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri",
        "--share=network",
        "--talk-name=org.a11y.Bus",
        "--env=RUST_LOG=share-preview=debug",
        "--env=G_MESSAGES_DEBUG=none"
    ],
    "build-options": {
        "append-path": "/usr/lib/sdk/rust-stable/bin",
        "env": {
            "CARGO_HOME": "/run/build/share-preview/cargo",
            "RUST_BACKTRACE": "1"
        }
    },
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a",
        "/lib/girepository-1.0",
        "/share/gir-1.0",
        "/bin/sassc"
    ],
    "modules": [
    	{
            "name": "libsass",
            "sources": [
                {
                    "type" : "archive",
                    "url" : "https://github.com/sass/libsass/archive/3.6.4.tar.gz",
                    "sha256": "f9484d9a6df60576e791566eab2f757a97fd414fce01dd41fc0a693ea5db2889"
                },
                {
                    "type" : "script",
                    "dest-filename" : "autogen.sh",
                    "commands" : [ "autoreconf -si" ]
                }
            ]
        },
        {
            "name": "sassc",
            "sources": [
                {
                    "type" : "archive",
                    "url" : "https://github.com/sass/sassc/archive/3.6.1.tar.gz",
                    "sha256": "8cee391c49a102b4464f86fc40c4ceac3a2ada52a89c4c933d8348e3e4542a60"
                },
                {
                    "type" : "script",
                    "dest-filename" : "autogen.sh",
                    "commands" : [ "autoreconf -si" ]
                }
            ]
        },
        {
            "name" : "libadwaita",
            "buildsystem" : "meson",
            "config-opts" : [
                "-Dvapi=false",
                "-Dexamples=false",
                "-Dtests=false"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/GNOME/libadwaita.git",
                    "branch" : "main",
                    "commit" : "3435bad9c6c7c84d75e11c80acb9f3123e0f280e"
                }
            ]
        },
        {
            "name": "share-preview",
            "buildsystem": "meson",
            "run-tests": true,
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://github.com/rafaelmardojai/share-preview/releases/download/0.1.0/share-preview-0.1.0.tar.xz",
                    "sha256" : "02683fccd531807be9141f950d8ae730068a6f422efa6ccbb681ab418a8557ef"
                }
            ]
        }
    ]
}
